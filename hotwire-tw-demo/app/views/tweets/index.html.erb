<%= turbo_stream_from "tweets" %>
<div class="p-3 border bg-ligh">
  <%= render partial: "new",  locals: {tweet: Tweet.new} %>
</div>

<ol class="tweet-list w-100">
  <%= turbo_frame_tag "tweets" do %>
    <% @tweets.each do |tweet| %>
      <li class="tweet-card">
        <%= render partial: "tweet", locals: {tweet: tweet} %>
      </li>
    <% end %>
  <% end %>
</ol>
